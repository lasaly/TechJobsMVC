<h1>@ViewBag.title</h1>

<h3>@ViewBag.jobs.Count Result(s)</h3>

<table>
    @{for (int i = 0; i < ViewBag.jobs.Count; i++)
        // TODO #3 - Use the same list display from Views/Search/Index.cshtml
        {
            <tr class="@( i % 2 == 0 ? "even" : "odd" ) ">
                <td><a asp-controller="List" asp-action="Jobs" asp-route-column="@ViewBag.jobs" asp-route-value="@ViewBag.title[i]">@ViewBag.title[i]</a></td>
            </tr>
        }
    }
</table>